{
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    // "latex-workshop.latex.outDir": "../tmp",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {
                "DIR": "/home/swarnendu/github/ohio-state-coe-dissertation-template",
                "DOC": "%DIR%/src/dissertation",
                "DOCFILE": "dissertation",
                "TMPDIR": "%DIR%/tmp",
                "OUTDIR": "%DIR%/tmp"
            }
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {
                "DIR": "/home/swarnendu/github/ohio-state-coe-dissertation-template",
                "DOC": "%DIR%/src/dissertation",
                "DOCFILE": "dissertation",
                "TMPDIR": "%DIR%/tmp",
                "OUTDIR": "%DIR%/tmp"
            }
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "%DOC%"
            ],
            "env": {
                "DIR": "/home/swarnendu/github/ohio-state-coe-dissertation-template",
                "DOC": "%DIR%/src/dissertation",
                "DOCFILE": "dissertation",
                "TMPDIR": "%DIR%/tmp",
                "OUTDIR": "%DIR%/tmp"
            }
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {
                "DIR": "/home/swarnendu/github/ohio-state-coe-dissertation-template",
                "DOC": "%DIR%/src/dissertation",
                "DOCFILE": "dissertation",
                "TMPDIR": "%DIR%/tmp",
                "OUTDIR": "%DIR%/tmp"
            }
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {
                "DIR": "/home/swarnendu/github/ohio-state-coe-dissertation-template",
                "DOC": "%DIR%/src/dissertation",
                "DOCFILE": "dissertation",
                "TMPDIR": "%DIR%/tmp",
                "OUTDIR": "%DIR%/tmp"
            }
        },
        {
            "name": "rnw2pdf",
            "command": "Rscript",
            "args": [
                "-e",
                "knitr::knit2pdf('%DOCFILE%')"
            ],
            "env": {
                "DIR": "/home/swarnendu/github/ohio-state-coe-dissertation-template",
                "DOC": "%DIR%/src/dissertation",
                "DOCFILE": "dissertation",
                "TMPDIR": "%DIR%/tmp",
                "OUTDIR": "%DIR%/tmp"
            }
        }
    ]
}
